<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/main_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/android_dlrg_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/botton_margin"
        android:layout_weight="4"
        android:src="@drawable/logo_eagle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/dlrg2"
        android:gravity="center_horizontal"
        android:text="@string/header"
        android:textColor="#0069b4"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical"
            android:layout_margin="@dimen/icon_margin"
            android:layout_toLeftOf="@id/adress_textView"
            android:src="@mipmap/location" />

        <TextView
            android:id="@+id/adress_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/botton_margin"
            android:fontFamily="@font/dlrg"
            android:text="@string/adress"
            android:textAlignment="center"
            android:textColor="#575756"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical"
            android:layout_margin="@dimen/icon_margin"
            android:src="@mipmap/phone" />

        <TextView
            android:id="@+id/phone_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/botton_margin"
            android:text="@string/phone"
            android:textColor="#575756"
            android:textSize="20sp"
            android:autoLink="phone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical"
            android:layout_margin="@dimen/icon_margin"
            android:layout_toLeftOf="@id/website_textView"
            android:src="@mipmap/website" />

        <TextView
            android:id="@+id/website_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/website"
            android:textColor="#575756"
            android:textSize="20sp"
            android:autoLink="web"
            />
    </LinearLayout>
</LinearLayout>
